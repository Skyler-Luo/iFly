# EditorConfig帮助开发者在不同的编辑器之间维护一致的编码风格

# 表示这是顶级配置文件
root = true

# 匹配所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, Vue文件
[*.{js,ts,vue}]
indent_style = space
indent_size = 2

# CSS, SCSS, Less文件
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML文件
[*.html]
indent_style = space
indent_size = 2

# JSON文件
[*.json]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Python文件
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Makefile
[Makefile]
indent_style = tab

# package.json
[package.json]
indent_style = space
indent_size = 2
